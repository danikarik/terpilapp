{% extends 'layouts/base.jinja' %}

{% block title %}
    Вход
{% endblock %}

{% block content %}

<div class="bg-grey-lighter h-screen">
    <div class="container mx-auto h-full flex justify-center items-center">
        <div class="w-1/3 bg-white px-4 py-4 rounded-lg">
            {% if form.errors %}
                <div id="alert" data-class-name="text-red" data-message="Имя пользователя и пароль не совпадают."></div>
            {% endif %}
            
            <div
                id="login"
                data-url="{{ url('login') }}"
                data-reset="{{ url('password_reset') }}"
                data-csrf="{{ csrf_token }}"
                data-next="{{ next }}"
            >
            </div>
        </div>
    </div>
</div

{% endblock %}